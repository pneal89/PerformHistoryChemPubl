<p id="notice"><%= notice %></p>
<head>
<style>
table, th, td {
    border: 1px solid black;
    border-collapse: collapse;
}
th, td {
    padding: 5px;
    text-align: left;    
}
</style>
</head>

<h1>Courses</h1>

<table style="width:100%">
  <thead>
    <tr>
      <th>Term</th>
      <th>Rubric</th>
      <th>Number</th>
      <th>Sect.</th>
      <th>Hours</th>
      <th>Type</th>
      <th>Day</th>
      <th>Time</th>
      <th>Instr.</th>
      <th>Rank</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.term %></td>
        <td><%= course.rubric %></td>
        <td><%= course.course_number %></td>
        <td><%= course.section %></td>
        <td><%= course.credit_hours %></td>
        <td><%= course.course_type %></td>
        <td><%= course.day %></td>
        <td><%= course.time %></td>
        <td><%= course.instructor %></td>
        <td><%= course.instructor_rank %></td>
        <td><b><u><%= link_to 'Show', course %></u></b></td>
        <td><b><u><%= link_to 'Edit', edit_course_path(course) %></u></b></td>
        <td><b><u><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></u></b></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

