<div class="col-md-12">
  <p id="notice"><%= notice %></p>
  <div class="row top_tiles">
    <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
      <div class="tile-stats">
        <div class="icon"><i class="fa fa-caret-square-o-right"></i></div>
        <div class="count"><%= @students.count %></div>
        <h3>Number Students </h3>
        <p>Lorem ipsum psdea itgum rixt.</p>
      </div>
    </div>

    <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
      <div class="tile-stats">
        <div class="icon"><i class="fa fa-caret-square-o-right"></i></div>
        <div class="count"><%= @students.count %></div>
        <h3>Average Act </h3>
        <p>Lorem ipsum psdea itgum rixt.</p>
      </div>
    </div>

    <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
      <div class="tile-stats">
        <div class="icon"><i class="fa fa-caret-square-o-right"></i></div>
        <div class="count"><%= @students.count %></div>
        <h3>Males </h3>
        <p>Lorem ipsum psdea itgum rixt.</p>
      </div>
    </div>

    <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
      <div class="tile-stats">
        <div class="icon"><i class="fa fa-caret-square-o-right"></i></div>
        <div class="count"><%= @students.count %></div>
        <h3>Females </h3>
        <p>Lorem ipsum psdea itgum rixt.</p>
      </div>
    </div>

  </div>

  <h1>Students</h1>

  <%= form_tag(students_path, :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search Students" %>
  <%= submit_tag "Search", :name => nil %>
  <% end %>
  <% if @students.blank? %>
  <h4>There are no students containing the term <%= params[:search] %>.</h4>
  <% end %>

  <table class="table table-striped table-responsive">
    <thead>
    <tr>
      <th>Uid</th>
      <th>Fname</th>
      <th>Lname</th>
      <th>Transfer hours</th>
      <th>Taking, failed attempts, grade</th>
      <th colspan="3">options</th>
    </tr>
    </thead>

    <tbody>
    <% @students.each do |student| %>
        <tr>
          <td><%= student.uid %></td>
          <td><%=  link_to student.fname, student_courses_path(student.id) %></td>
          <td><%= student.lname %></td>
          <td><%= student.transfer_hours %></td>
          <td>
          <% student.course_students.each do |coursestudent| %>
            <%= coursestudent.course.course_number%>, <%=coursestudent.attempt%>, <%=coursestudent.grade%>
          <% end %>
          </td>
          <td><%= link_to 'Edit', edit_student_path(student) %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
  <br>

  <%= link_to 'New Student', new_student_path %>

</div>
